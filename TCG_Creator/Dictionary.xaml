    <SolidColorBrush x:Key="ShowAllRectanglesBrush"
                     Color="{DynamicResource ShowAllRectanglesColor}" />
    <SolidColorBrush x:Key="SelectedRectangleBrush"
                     Color="{DynamicResource SelectedRectangleColor}" />
    <SolidColorBrush x:Key="MouseOverRectangleBrush"
                     Color="{DynamicResource MouseOverRectangleColor}" />

    <SolidColorBrush x:Key="StackPanelBorderBrush"
                     Color="{DynamicResource StackPanelBorderColor}" />

    <SolidColorBrush x:Key="RegionIconColorBrush"
                     Color="{DynamicResource RegionIconColor}" />

    <SolidColorBrush x:Key="TreeViewTemplateBrush"
                     Color="{DynamicResource TreeViewTemplateColor}" />


    <ToolTip x:Key="InheritDeckFirst" 
             Content=""
             ContentStringFormat="Inherit {0}From Deck First"/>
    <ToolTip x:Key="InheritRegionFirst" 
             Content=""
             ContentStringFormat="Inherit {0}From Region First"/>
    <ToolTip x:Key="DoNotInherit" 
             Content=""
             ContentStringFormat="Do Not Inherit{0}"/>
    <ToolTip x:Key="OldDoNotInherit" 
             Content="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType={x:Type CheckBox}}}"
             ContentStringFormat="Do Not Inherit{0}"/>


    <Style TargetType="local:PathButton"
           x:Key="RegionButton">
        <Setter Property="DataStroke"
                Value="{DynamicResource RegionIconColorBrush}" />
    </Style>
    
    
    <Style TargetType="Border"
           x:Key="StackPanelBorder">
        <Setter Property="BorderThickness"
                Value="3" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource StackPanelBorderBrush}" />
    </Style>
    
    <Style TargetType="Button"
           x:Key="TextButton">
        <Setter Property="Margin" Value="10" />
    </Style>
    <Style TargetType="Button"
           x:Key="SquareIconButton">
        <Setter Property="Margin"
                Value="2" />
    </Style>
    <Style TargetType="Button"
           x:Key="Normal">
    </Style>
    <Style x:Key="MoveRegionButton" 
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Path x:Name="MainPath"
                              Width="31.6711" Height="38.0053"
                              Stretch="Fill"
                              Fill="{DynamicResource RegionIconColorBrush}"
                              Data="{Binding Source={StaticResource Move_Region_Icon}, Path=Data}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
    </Style>


    <Style TargetType="CheckBox"
           x:Key="IconCheckBox">
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
    </Style>
    <Style x:Key="SlavedCheckBox2States"
           TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Image Name="Im"
                           Source="pack://application:,,,/Resources/Icons/link.ico" />

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="Im" 
                                    Property="Source" 
                                    Value="pack://application:,,,/Resources/Icons/link_break.ico"  />

                        </Trigger>
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="Im" 
                                    Property="Source" 
                                    Value="pack://application:,,,/Resources/Icons/link_deck.png"  />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Style.Triggers>
            <Trigger Property="IsChecked"
                     Value="True">
                <Setter Property="ToolTip"
                        Value="{StaticResource InheritRegionFirst}" />
            </Trigger>
            <Trigger Property="IsChecked"
                     Value="{x:Null}">
                <Setter Property="ToolTip"
                        Value="{StaticResource InheritDeckFirst}" />
            </Trigger>
            <Trigger Property="IsChecked"
                     Value="False">
                <Setter Property="ToolTip"
                        Value="{StaticResource DoNotInherit}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="SlavedCheckBox" 
           TargetType="CheckBox"
           BasedOn="{StaticResource SlavedCheckBox2States}">
        <Setter Property="IsThreeState"
                Value="True"/>
    </Style>
    <Style x:Key="LockedIconCheckBox" 
           TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Path x:Name="MainPath"
                          Width="31.6711" Height="38.0053"
                          Stretch="Fill"
                          Fill="{DynamicResource RegionIconColorBrush}"
                          Data="{Binding Source={StaticResource Lock_Icon}, Path=Data}" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="MainPath" 
                                    Property="Data" 
                                    Value="{Binding Source={StaticResource Unlock_Icon}, Path=Data}"  />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <Style TargetType="GridSplitter"
           x:Key="StdGridSplitter">
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="Width"
                Value="5" />
    </Style>

    <Style TargetType="GroupBox"
           x:Key="StdGroupBox">
    </Style>

    <Style TargetType="Label"
           x:Key="TitleLabel">
        <Setter Property="FontWeight"
                Value="ExtraBold" />
    </Style>

    

    <Style TargetType="local:PathCheckBox"
           x:Key="PathCheckBox">
        <Setter Property="DataStroke"
                Value="{DynamicResource RegionIconColorBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Path x:Name="MainPath"
                          Width="31.6711" Height="38.0053"
                          Stretch="Fill"
                          Fill="{DynamicResource RegionIconColorBrush}"
                          Data="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PathCheckBox}}, Path=Data}" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="MainPath" 
                                    Property="Data" 
                                    Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PathCheckBox}}, Path=CheckedData}"  />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <sys:Double x:Key="Selected_Stroke_Thickness">4</sys:Double>
    <Style TargetType="Rectangle" 
           x:Key="Show_All_Card_Rectangle">
        <Setter Property="StrokeThickness"
                Value="{DynamicResource Selected_Stroke_Thickness}" />
        <Setter Property="Stroke"
                Value="{DynamicResource ShowAllRectanglesBrush}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Stroke"
                        Value="{DynamicResource MouseOverRectangleBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Rectangle" 
           x:Key="Card_Rectangle">
        <Style.Triggers>
            <Trigger Property="Tag">
                <Trigger.Value>
                    <sys:Boolean>True</sys:Boolean>
                </Trigger.Value>
                <Setter Property="Stroke"
                        Value="{DynamicResource MouseOverRectangleBrush}" />
                <Setter Property="StrokeThickness"
                        Value="{DynamicResource Selected_Stroke_Thickness}" />
            </Trigger>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Stroke"
                        Value="{DynamicResource MouseOverRectangleBrush}" />
                <Setter Property="StrokeThickness"
                        Value="{DynamicResource Selected_Stroke_Thickness}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Rectangle" 
           x:Key="Selected_Card_Rectangle">
        <Setter Property="StrokeThickness"
                Value="{DynamicResource Selected_Stroke_Thickness}" />
        <Setter Property="Stroke"
                Value="{DynamicResource SelectedRectangleBrush}">
        </Setter>
    </Style>

    <Style TargetType="Slider"
           x:Key="StdSlider">
        <Setter Property="ToolTip"
                Value="{Binding RelativeSource={RelativeSource Self}, Path=Value}" />
    </Style>

    <Style TargetType="xctk:ColorPicker" 
           x:Key="StdColorPicker">
        <Setter Property="AvailableColors"
                Value="{Binding GetUsedCardColors}" />
        <Setter Property="ShowAvailableColors"
                Value="False" />
        <Setter Property="RecentColorsHeader"
                Value="Colors used on this card" />
    </Style>


</ResourceDictionary>