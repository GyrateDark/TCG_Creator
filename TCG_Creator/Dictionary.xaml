    <SolidColorBrush x:Key="ShowAllRectanglesBrush"
                     Color="{DynamicResource ShowAllRectanglesColor}" />
    <SolidColorBrush x:Key="SelectedRectangleBrush"
                     Color="{DynamicResource SelectedRectangleColor}" />
    <SolidColorBrush x:Key="MouseOverRectangleBrush"
                     Color="{DynamicResource MouseOverRectangleColor}" />

    <SolidColorBrush x:Key="StackPanelBorderBrush"
                     Color="{DynamicResource StackPanelBorderColor}" />

    <SolidColorBrush x:Key="RegionIconColorBrush"
                     Color="{DynamicResource RegionIconColor}" />


    <Style TargetType="Border"
           x:Key="StackPanelBorder">
        <Setter Property="BorderThickness"
                Value="3" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource StackPanelBorderBrush}" />
    </Style>
    
    <Style TargetType="Button"
           x:Key="TextButton">
        <Setter Property="Margin" Value="10" />
    </Style>
    <Style TargetType="Button"
           x:Key="SquareIconButton">
        <Setter Property="Margin"
                Value="2" />
    </Style>
    <Style TargetType="Button"
           x:Key="Normal">
    </Style>
    <Style x:Key="MoveRegionButton" 
           TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Path x:Name="MainPath"
                              Width="31.6711" Height="38.0053"
                              Stretch="Fill"
                              Fill="{DynamicResource RegionIconColorBrush}"
                              Data="{Binding Source={StaticResource Move_Region_Icon}, Path=Data}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
    </Style>


    <Style TargetType="CheckBox"
           x:Key="IconCheckBox">
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
    </Style>
    <Style x:Key="SlavedCheckBox" 
           TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Image Name="Im"
                               Source="pack://application:,,,/Resources/Icons/link.ico" />

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="Im" 
                                    Property="Source" 
                                    Value="pack://application:,,,/Resources/Icons/link_break.ico"  />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
    </Style>
    <Style x:Key="LockedIconCheckBox" 
           TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Path x:Name="MainPath"
                              Width="31.6711" Height="38.0053"
                              Stretch="Fill"
                              Fill="{DynamicResource RegionIconColorBrush}"
                              Data="{Binding Source={StaticResource Lock_Icon}, Path=Data}" />

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="MainPath" 
                                    Property="Data" 
                                    Value="{Binding Source={StaticResource Unlock_Icon}, Path=Data}"  />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>
    <Style x:Key="NewRegionCheckBox" 
           TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Path x:Name="MainPath"
                              Stretch="Uniform"
                              Fill="{DynamicResource RegionIconColorBrush}"
                              Data="{Binding Source={StaticResource Lock_Icon}, Path=Data}" />
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="MainPath" 
                                    Property="Data" 
                                    Value="{Binding Source={StaticResource Unlock_Icon}, Path=Data}"  />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <Style TargetType="GridSplitter"
           x:Key="StdGridSplitter">
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="Width"
                Value="5" />
    </Style>

    <Style TargetType="GroupBox"
           x:Key="StdGroupBox">
    </Style>

    <Style TargetType="Label"
           x:Key="TitleLabel">
        <Setter Property="FontWeight"
                Value="ExtraBold" />
    </Style>

    <Style TargetType="local:PathButton"
           x:Key="RegionButton">
        <Setter Property="DataStroke"
                Value="{DynamicResource RegionIconColorBrush}" />
    </Style>
    
    <sys:Double x:Key="Selected_Stroke_Thickness">4</sys:Double>
    <Style TargetType="Rectangle" 
           x:Key="Show_All_Card_Rectangle">
        <Setter Property="StrokeThickness"
                Value="{DynamicResource Selected_Stroke_Thickness}" />
        <Setter Property="Stroke"
                Value="{DynamicResource ShowAllRectanglesBrush}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Stroke"
                        Value="{DynamicResource MouseOverRectangleBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="Rectangle" 
           x:Key="Card_Rectangle">
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Stroke"
                        Value="{DynamicResource MouseOverRectangleBrush}" />
                <Setter Property="StrokeThickness"
                        Value="{DynamicResource Selected_Stroke_Thickness}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Rectangle" 
           x:Key="Selected_Card_Rectangle">
        <Setter Property="StrokeThickness"
                Value="{DynamicResource Selected_Stroke_Thickness}" />
        <Setter Property="Stroke"
                Value="{DynamicResource SelectedRectangleBrush}">
        </Setter>
    </Style>
    <Style TargetType="Border"
           x:Key="Content_Border">
        <Setter Property="BorderThickness"
                Value="3" />
        <Setter Property="BorderBrush"
                Value="LightGray" />
        <Setter Property="Margin"
                Value="3,3,3,3" />
    </Style>
</ResourceDictionary>