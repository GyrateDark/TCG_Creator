<Page x:Class="TCG_Creator.Templates"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TCG_Creator"
      xmlns:self="clr-namespace:TCG_Creator"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Templates"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition />
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Viewbox VerticalAlignment="Top"
                     Grid.Column="0">
                <StackPanel>
                    <TreeView x:Name="Tree_View" 
                              ItemsSource="{Binding Get_Tree_View_Cards}"
                              SelectedValuePath="{Binding SelectedTreeViewNode}" >
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Name}" />
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"
                               TextBlock.TextAlignment="Right"
                               Content="Template Name:"/>
                        <GridSplitter />
                        <TextBox Grid.Column="1"
                                 Text="{Binding ElementName=Tree_View, Path=SelectedItem.Name, Mode=TwoWay}" />
                    </Grid>
                    <Button Content="Add Card" Command="{Binding Path=AddCardCommand}"/>
                    <Button x:Name="but_temp_save" Content="Save" Margin="0" Click="but_temp_save_Click"/>
                    <Button x:Name="but_temp_load" Content="Load" Margin="0" Click="but_temp_load_Click"/>

                </StackPanel>
            </Viewbox>
        </ScrollViewer>
        <GridSplitter Grid.Column="0"
                      Width="5"/>
        <Viewbox Grid.Column="1">
            <Canvas Height="{Binding CardRenderHeight}"
                    Width="{Binding CardRenderWidth}" >
                <Grid x:Name="theGrid"
                      MouseDown="Grid_MouseDown"
                      MouseUp="Grid_MouseUp"
                      MouseMove="Grid_MouseMove"
                      Background="Transparent">
                    <ItemsControl ItemsSource="{Binding Drawing_Card_Elements}" >
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    <Canvas>
                        <!-- This canvas is overlaid over the previous canvas and is used to 
                place the rectangle that implements the drag selection box. -->
                        <Rectangle  x:Name="selectionBox"
                                    Visibility="Collapsed"
                                    Stroke="Black"
                                    StrokeThickness="1"/>
                    </Canvas>
                </Grid>
            </Canvas>
        </Viewbox>
        <GridSplitter Grid.Column="1"
                      Width="5"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Grid.Column="2">
            <Viewbox VerticalAlignment="Top">
                <StackPanel>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.4*"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0"
                                       Grid.Row="0"
                                       Text="Add Region:" />
                            <Button Name="But_Add_Region"
                                    Grid.Column="1"
                                    Grid.Row="0" 
                                    Click="But_Add_Region_Click" />
                            <TextBlock Grid.Column="0"
                                       Grid.Row="1"
                                       Text="Delete Region:" />
                            <CheckBox Name="But_Delete_Region"
                                        Grid.Column="1"
                                        Grid.Row="1" 
                                      IsChecked="{Binding DeleteNextSelectedRegion}"/>
                    </Grid>
                </StackPanel>
                    <StackPanel Visibility="{Binding VisOfRichTextEditing}">
                        <Border Style="{StaticResource Content_Border}">
                            <StackPanel>
                    <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MaxWidth="200"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0"
                                   Grid.Row="1"
                                   Text="Ignore Font Style:" />
                            <CheckBox Grid.Column="1"
                                  Grid.Row="1"/>
                        </Grid>
                        <Border Style="{StaticResource Content_Border}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition MaxWidth="200"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Column="0"
                                   Grid.Row="0"
                                   Text="Gradient Brush:"/>
                                    <CheckBox Name="GradientCheckBox"
                                          Grid.Column="1"
                                          Grid.Row="0"
                                          IsChecked="{Binding GradientBrushRequested}"/>
                                </Grid>
                                <TextBlock Text="First Color" 
                                       Visibility="{Binding VisOfGradientBrushes}"/>
                                <xctk:ColorPicker Name="ClrPcker_1" 
                                              Margin="5,5,5,5"/>
                                <TextBlock Text="Last Color" 
                                       Visibility="{Binding VisOfGradientBrushes}"/>
                                <xctk:ColorPicker Name="ClrPcker_2" 
                                              Margin="5,5,5,5"
                                              Visibility="{Binding VisOfGradientBrushes}"/>
                            </StackPanel>
                        </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Viewbox>
        </ScrollViewer>
    </Grid>
</Page>
