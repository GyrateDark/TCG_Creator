<Page x:Class="TCG_Creator.Templates"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TCG_Creator"
      xmlns:self="clr-namespace:TCG_Creator"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Templates">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <GridSplitter Style="{StaticResource StdGridSplitter}" 
                      Grid.Column="0" 
                      Grid.Row="0"/>
        <GridSplitter Style="{StaticResource StdGridSplitter}" 
                      Grid.Column="1" 
                      Grid.Row="0"/>
        <GridSplitter Style="{StaticResource StdGridSplitter}" 
                      Grid.Column="2" 
                      Grid.Row="0"/>
        <GridSplitter Style="{StaticResource StdGridSplitter}" 
                      Grid.Column="3" 
                      Grid.Row="0"/>

        <local:TemplateEdit Grid.Column="0"
                            Grid.Row="0"/>
        <local:TemplateSettings Grid.Column="1"
                                Grid.Row="0"/>
        <local:CardDisplay Grid.Column="2"
                           Grid.Row="0" 
                           VerticalAlignment="Center"/>

        <local:CardEdit Grid.Column="3"
                        Grid.Row="0" />
    </Grid>
</Page>
