<Page x:Class="TCG_Creator.Deck_Edit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TCG_Creator"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Deck_Edit">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"
                              MinWidth="100"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Grid.Column="0" ScrollViewer.CanContentScroll="True">
            <Label x:Name="lbl_Deck_Name" Content="Label"/>
            <Label x:Name="lbl_Game_Name" Content="Label"/>
            <Button x:Name="but_New_Card" Content="New Card"/>
            <Button x:Name="but_Statistics" Content="Statistics"/>
        </StackPanel>
    </Grid>
</Page>
